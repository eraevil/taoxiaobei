/* pages/release/index.wxss */

.release{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  position: absolute; 
  /* border: 2rpx black solid; */
}
.img{
  background: #99CCFF;
  width: 50%;
  /* border: 2rpx black solid; */
  box-shadow: 0px 10px 50px 20px rgb(165,202,252);
  border-radius: 40rpx;
}

.img:active{
  box-shadow: 0px 0px 120px 40px #c4cbcf;
  background-color: #c4cbcf;
}

.text{
  font-family: "STXingkai" !important;
  font-family: 'Microsoft YaHei UI';
  font-weight: bold;
  /* color: #93b5cf; */
  color:white;
  font-size: 80rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

image{
  margin: 50rpx;
  width: 280rpx;
  height: 280rpx;
  border-radius: 50% 50%;
}



