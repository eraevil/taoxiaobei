/* pages/home/index.wxss */
.container{
  background-color: #fff;
}
.search{
  background-color: #fff;
  display: flex;
  flex-direction: row;
  height: 60rpx;
  align-items: center;
  margin-bottom: 10rpx;
}

.search .scan{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 10%;
  border-right:2rpx solid #DDDDDD;

}

.search .search-input{
  padding: 10rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  height: 100%;
  width: 80%;
  border-radius: 10rpx;
  align-items: center;
}

.search-input input{
  /* border: 1rpx solid black; */
  margin-left: 15rpx;
  margin-bottom: 5rpx; 
  /* padding: 10rpx 30rpx; */
  background-color: #fff;
}

.search-icon{
  margin-left: 5rpx; 
  width: 30rpx;
  height: 30rpx;
}

.search-text{
  top: 0px;
  padding: 0px;
  left: 0rpx;
  right: 0rpx;
}

.widegets-img{
  width: 40rpx;
  height: 40rpx;
}

.chat-img{
  width: 50rpx;
  height: 50rpx;
}

.indicator-wrap{
  background-color: #fff;
  width: 90%;
  margin: 0 auto;
}

swiper-item{
  border-radius: 30rpx 30rpx 30rpx 30rpx;
}
swiper-item image{
  border-radius: 30rpx 30rpx 30rpx 30rpx;
  width: 100%;
  height: 98%;
}

.tab{
  /* margin-top: 5rpx; */
  height: 300rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  flex-wrap: wrap;
  box-shadow:0rpx 2rpx 3rpx 0px #DDDDDD;
}

.tab-item{
  width: 163rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 12rpx;
  
  /* align-items: center; */
}

.tab-img{
  height: 60%;
}

.tab-item-hover{
  background-color: #f7f7f7;
  box-shadow:0rpx 4rpx 6rpx 4rpx #DDDDDD;
  border-radius: 5rpx;
}

.tab-img image{
  width: 100%;
  height: 100%;
}

.product{
  /* height: 400rpx; */
  width: 100%;
  margin-top: 10rpx; 
  /* background-color: #f7f7f7; */
  display: flex;
  flex-direction: row;
}

.product-tab{
  margin-top: 10rpx; 
  padding-left: 26rpx;
  padding-bottom: 15rpx; 
  display: flex;
  width: 100%;
  overflow-x: scroll;
  white-space: nowrap;
  box-shadow:0rpx 2rpx 3rpx 0px #DDDDDD;
  
  /* background-color: #000; */
}

.product-tab-item{
  display: inline; 
  margin-right: 40rpx;
  /* overflow-x: scroll; */
  /* background-color: #fff; */
}

.product-tab-item-hover{
  font-size: 36rpx;
  font-weight:bold;
  border-bottom: 8rpx solid red;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 商品列表 */
.product-list{
  margin-top: 5rpx;
  width: 92%; 
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between; 
}

.product-item{
  margin-top: 30rpx;
  background-color: #FFFFFF;
  height: 560rpx;
  width: 48%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-radius: 10rpx;
  box-shadow:1px 2rpx 3rpx 2rpx #888888;
}
.product-img{
  width: 100%;
  height: 56%;
}
.product-img image {
  height: 100%;
  width: 100%;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
}

.product-title{
  margin-left: 10rpx; 
  margin-top: 10rpx; 
  letter-spacing: 2rpx;
  height: 13%;
  /* font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; */
  font-size: 28rpx;
  line-height: 40rpx;

  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-price{
  padding-left: 10rpx; 
  height: 7%;
  width: 100%;
  /* background: greenyellow; */
  font-size: 28rpx;
  color: red;
  border-bottom: 3rpx dashed #a7a8a8; 
  padding-bottom: 3rpx; 
  margin-bottom: 5rpx;
}

.user-info{
  margin-left: 10rpx; 
  margin-top: 15rpx; 
  display: flex;
  flex-direction: row;
  height: 20%;
  width: 100%;
}

.user-img{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}

.user-name{
  margin-left: 10rpx;
  font-size: 20prx; 
  letter-spacing: 2rpx;
}

.msg{
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
  text-align: center;
}





