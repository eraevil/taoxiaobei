/* pages/me/trade/recharge/recharge.wxss */

/* 余额显示 */
.money_box{
  width: 100%;
  height: 240rpx;
  /* border: 1rpx #ddd solid; */
  box-shadow:0rpx 2rpx 3rpx 0px #DDDDDD;
}

.left{
  width: 34%;
  height: 100%;
  /* border: 1rpx #000 solid; */
  float: left;
  
}

.left image{
  width: 180rpx;
  height: 180rpx;
  position: relative;
  top: 30rpx;
  left: 50rpx;
  border-radius: 50%;
  /* border-bottom: 1rpx #ddd solid; */
  box-shadow:0rpx 4rpx 6rpx 4rpx #DDDDDD;
}

.right{
  height: 100%;
  width: 59%;
  /* border: 1rpx #000 solid; */
  float: left;
}

.name{
  position: relative;
  top: 60rpx;
  font-size: 36rpx;
  font-weight: 600;
}

.number{
  position: relative;
  top: 80rpx;
  /* margin-top: 10rpx; */
  font-size: 30rpx;
  font-weight: 600;
}

/* 充值记录 */
.record_box{
  /* margin-top: 30rpx; */
  width: 100%;
  height: 800rpx;
  /* border: 1rpx #ddd solid; */
}

/* 管理员信息 */
.admin_qr{
  /* border: 1rpx #000 solid; */
  height: 550rpx;
}

.admin_qr image{
  width: 300rpx;
  height: 300rpx;
  /* float: left; */
  position: relative;
  top: 80rpx;
  left: 230rpx;
  box-shadow:0rpx 0rpx 10rpx 4rpx rgb(168, 206, 249);
}

.admin_wechat{
  /* float: left; */
  display: inline-block;
  position: relative;
  top: 80rpx;
  left: 230rpx;
  font-size: 22rpx;
  color: red;
}
.admin_wechat view{
  margin-top: 10rpx;
  width: 100%;
  float: left;
}

/* 充值记录表格 */
.title{
  font-weight: 600;
  margin-left: 10rpx;
  font-size: 36rpx;
  
  /* border: 1rpx #ddd solid; */
}

.th, .tr{
  /* margin-left: 20rpx; */
}
.th{
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  border-bottom: 3rpx #ddd solid;
  border-top: 3rpx #ddd solid;
  height: 75rpx;
  line-height: 75rpx;
  margin-top: 20rpx;
}
.tr{
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx #ddd solid;
}

.th view,.tr view{
  float: left;
}

.table_left{
  /* background:#ddd; */
  width: 45%;
  margin-left: 20rpx;
}

.table_center{
  /* background:rgb(173, 84, 84); */
  width: 28%;
}

.table_right{
