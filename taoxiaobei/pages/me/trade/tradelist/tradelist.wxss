/* pages/me/trade/tradelist/tradelist.wxss */
page{
  background: #ddd;
}

.gooods-panel{
  width: 100%;
  height: 300rpx;
}

.goods-box{
  width: 90%;
  height: 260rpx;
  background: #fff;
  margin-left: 5%;
  margin-top: 60rpx;
  border-radius: 10rpx;
  border: 1rpx #ddd solid;
}

.img,content{
  float: left;
}

.img{
  /* background: #888; */
  width: 190rpx;
  height: 190rpx;
  margin-top: 25rpx;
  margin-left: 30rpx;
  float: left;
  border: 1rpx #ddd solid;
}

.img image{
  width: 190rpx;
  height: 190rpx;
}

.content{
  /* background: #4f2; */
  width: 350rpx;
  height: 190rpx;
  margin-top: 25rpx;
  margin-left: 30rpx;
  float: left;
}

.text{
  height: 25%;
  width: 100%;
  /* border: 1rpx #ddd solid; */
}

.title{
  height: 96rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  /* line-height: 50%; */
  font-weight: 600;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.price{
  color: red;
  line-height: 50rpx;
}

.time{
  color: #888;
  line-height: 50rpx;
}


.flag{
  width: 150rpx;
  height: 150rpx;
  float: right;
  position: relative;
  bottom: 300rpx;
  /* border: 1rpx #000 solid; */
}

.flag image{
  width: 150rpx;
  height: 150rpx;
}

