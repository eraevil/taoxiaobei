/* pages/me/index.wxss */
/* 头部 */
.head{
  width: 100%;
  height: 260rpx;
  /* background: #ddd; */
  /* border: 2rpx black solid; */
}

.head .box{
  position: absolute;
  width: 100%;
  height: 260rpx;
  background: rgb(250,205,145);
  box-shadow:0rpx 4rpx 6rpx 4rpx #DDDDDD;
}

.userImg{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50% 50%;
  margin-top: 50rpx;
  margin-left: 40rpx;
  float: left;
  /* border: 2rpx black solid; */
}

.userImg image{
  width: 135rpx;
  height: 135rpx;
  border-radius: 50% 50%;
}

.userName{
  width: 400rpx;
  height: 150rpx;
  margin-left: 25rpx;
  float: left;
  position: relative;
  top: 50rpx;
  /* border: 2rpx black solid; */
}

.name{
  height: 50%;
  /* border: 2rpx black solid; */
  line-height: 80rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.page{
  height: 50%;
  /* border: 2rpx black solid; */
}

.pageIcon{
  margin-top: 5rpx;
  /* font-family: 'Times New Roman', Times, serif; */
  font-size: 24rpx;
  text-align: center;
  line-height: 42rpx;
  width: 200rpx;
  height: 40rpx;
  border-radius: 30rpx 30rpx;
  background: white;
}

.icon{
  width: 100rpx;
  height: 150rpx;
  float: left;
  /* margin-left: 40rpx; */
  margin-top:50rpx;
  line-height: 100rpx;

  /* border: 2rpx black solid; */
}

.icon image{
  width: 70rpx;
  height: 70rpx;
  position: relative;
  top: 35rpx;
  left: 20rpx;
  /* border: 2rpx black solid; */
}

.text{
  /* height: 80rpx; */
  margin-left: 40rpx;
  /* margin-top: 5rpx; */
  position: relative;
  float: left;
  color: rgb(153,153,153);
  font-family: 'Times New Roman', Times, serif;
  font-size: 28rpx;
  /* top: 250rpx; */
  /* border: 2rpx black solid; */
  /* float: left; */
}

/* 商品信息 */
/* 交易信息 */
.goods , .trade{
  width: 100%;
  height: 300rpx;
  background: rgb(242,242,242);
  /* border: 2rpx black solid; */
}

.trade{
  height: 270rpx;
}

.trade .box, .goods .box{
  width: 90%;
  margin-top: 30rpx;
  margin-left: 5%;
  height: 230rpx;
  border-radius: 30rpx;
  background: white;
  font-family: 'Times New Roman', Times, serif;
  position: absolute;
  /* border: 2rpx black solid; */
}

.trade .box{
  margin-top: 0rpx;
}

.boxTitle{
  font-weight: bold;
  font-size: 28rpx;
  margin-top: 15rpx;
  margin-left: 30rpx;
  /* border: 2rpx black solid; */
}

.status{
  width: 95%;
  height: 150rpx;
  margin-left: 30rpx;
  /* border: 2rpx black solid; */
}

.statusBox{
  width: 20%;
  height: 100%;
  float: left;
  margin-right: 30rpx;
  margin-top: 15rpx;
  font-size: 28rpx;
  text-align: center;
  /* border: 2rpx black solid; */
}

.statusBox-top image{
  border-radius: 50% 50% 50% 50%;
  border: 2rpx #ddd solid;
  width: 100rpx;
  height: 100rpx;
  
}

/* 个人信息 */
.info{
  width: 100%;
  height: 350rpx;
  background: rgb(242,242,242);
}

.info .box{
  background: white;
  width: 100%;
  height: 310rpx;
}

.tr{
  width: 100%;
  height: 33%;
  line-height: 100rpx;
  font-size: 32rpx;
  /* position: absolute; */
  border-bottom: 1rpx #ddd solid;
  font-family: 'Times New Roman', Times, serif;
  float:left;
}

.tr view{
  float: left;
  /* border: 1rpx #000 solid; */
}


.tr image{
  width: 60rpx;
  height: 60rpx;
  position: relative;
  top: 18rpx;
  left: 30rpx;
  border-radius: 3rpx 3rpx;
  /* border: 2rpx #ddd solid; */
}

.schoolName{
  width: 75%;
  position: relative;
  text-align: right;
  /* border: 1rpx #000 solid; */
}

/* 平台协议 */
.protocol{
  width: 100%;
  height: 400rpx;
  background: rgb(242,242,242);
}

.protocol .box{
  background: white;
  width: 100%;
  height: 400rpx;
}

.protocol .tr{
  height: 100rpx;
}